<?php

// --------------------------------------------------------------
// Launch the CI Code Generator.
// --------------------------------------------------------------

if ( ! defined('DS') ) {
    define('DS', DIRECTORY_SEPARATOR);
}

require 'application' . DS . 'libraries' . DS . 'CI_Code_Generator' . DS . 'CI_Code_Generator.php';

try
{
	$generate = new CI_Code_Generator();
	$generate->run(array_slice($argv, 1));
}
catch (\Exception $e)
{
	echo $e->getMessage();
}

echo PHP_EOL;