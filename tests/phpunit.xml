<phpunit
    colors="true"
    stopOnFailure="false"
    backupGlobals="false"
    backupStaticAttributes="false"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    syntaxCheck="false"
    bootstrap="../vendor/autoload.php">
    <filter>
        <exclude>
            <file>generate</file>
            <file>generate.php</file>
            <file>getops.php</file>
        </exclude>
    </filter>
    <logging>
        <log type="coverage-html" target="/tmp/report/CI-Code-Generator" charset="UTF-8"
             highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging>
</phpunit>


